{
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.path": "/usr/bin/clangd",
    "clangd.arguments": [
        "--log=verbose",
        "--query-driver=/usr/bin/gcc",
        "--compile-commands-dir=${workspaceFolder}/"
    ],
		"files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.a.cmd": true,
        "**/*.o.cmd": true,
        "**/*.o.d": true,
        "**/*.o": true,
        "**/*.a": true,
        "**/*.builtin": true,
        "**/*.order": true,
        "**/*.ko.cmd": true,
        "**/*.mod.c": true,
        "**/Module.symvers": true,
        "**/.tmp_versions": true
    },
	"editor.inlayHints.enabled": "on"
}